<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textview_ac_auto_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/ac_auto"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/textview_ac_cool_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/ac_cool"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textview_ac_auto_mode"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/textview_ac_dry_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/ac_dry"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_ac_cool_mode"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/textview_ac_heat_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/ac_heat"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_ac_dry_mode"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/textview_ac_fan_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/ac_fan"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_ac_heat_mode"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/iv_ac_line_separator"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textview_ac_fan_header"
        app:layout_constraintLeft_toRightOf="@+id/textview_ac_dry_mode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_ac_on_off_sign"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/ac_onoff_description"
        android:src="@drawable/onoff_symbol"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_ac_line_separator"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textview_ac_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/iv_ac_line_separator"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:text="27"
        android:textSize="100sp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textview_ac_scale"
        android:layout_marginEnd="0dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_ac_line_separator"
        android:layout_marginStart="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_toEndOf="@id/textview_ac_temperature"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        tools:text="ÂºC"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/textview_ac_scale"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textview_ac_fan_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_ac_temperature"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/iv_ac_line_separator"
        android:background="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:text="@string/ac_fan"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/iv_ac_line_separator"
        app:layout_constraintTop_toBottomOf="@+id/textview_ac_temperature" />
    <TextView
        android:id="@+id/textview_ac_fan_level_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textview_ac_fan_header"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/textview_ac_fan_header"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="@string/ac_sign_fan"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/textview_ac_fan_header"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_ac_fan_header" />
    <TextView
        android:id="@+id/textview_ac_fan_level_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textview_ac_fan_header"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/textview_ac_fan_level_1"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="@string/ac_sign_fan"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_ac_fan_header"
        app:layout_constraintLeft_toRightOf="@+id/textview_ac_fan_level_1"
        android:layout_marginStart="0dp" />
    <TextView
        android:id="@+id/textview_ac_fan_level_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textview_ac_fan_header"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/textview_ac_fan_level_2"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="@string/ac_sign_fan"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_ac_fan_header"
        app:layout_constraintLeft_toRightOf="@+id/textview_ac_fan_level_2"
        android:layout_marginStart="0dp" />
    <TextView
        android:id="@+id/textview_ac_fan_level_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textview_ac_fan_header"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/textview_ac_fan_level_3"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="@string/ac_auto"
        android:textAllCaps="true"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_ac_fan_header"
        app:layout_constraintLeft_toRightOf="@+id/textview_ac_fan_level_3"
        android:layout_marginStart="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>